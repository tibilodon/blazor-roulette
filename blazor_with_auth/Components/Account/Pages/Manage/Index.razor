        [Display(Name = "UserName")]
        [RegularExpression(@"^\S+$", ErrorMessage = "Username field cannot contain white spaces.")]
        public string? UserName { get; set; }
    }

    public sealed class WhiteSpaceValidationAttribute : ValidationAttribute
    {
        public WhiteSpaceValidationAttribute()
        {
            ErrorMessage = "The {0} field cannot contain only white spaces.";
        }

        public override bool IsValid(object? value)
        {
            if (value == null)
            {
                return true;
            }

            if (!(value is string valueAsString))
            {
                return false;
            }

            return !string.IsNullOrWhiteSpace(valueAsString);
        }
    }

  
